# ───────────────
# Supabase (public)
# ───────────────
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR-ANON-PUBLIC-KEY

# ───────────────
# Storage (bucket para imágenes del admin)
# ───────────────
STORAGE_BUCKET=products

# ───────────────
# Admin (solo DEV; opcional)
# Usuarios listados aquí entran al /admin aunque falte perfil en DB.
# En producción es mejor usar sólo perfiles/roles RLS.
# ───────────────
ADMIN_EMAILS=
ADMIN_ROLES=owner,editor

# ───────────────
# Nombres de tablas reales (tu esquema usa prefijo catalogo_)
# Cambiá si en el futuro modificás prefijos.
# ───────────────
DB_TABLE_PRODUCTS=catalogo_products
DB_TABLE_VARIANTS=catalogo_variants
DB_TABLE_IMAGES=catalogo_images
DB_TABLE_PROFILES=catalogo_profiles
